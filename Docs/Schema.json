{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "_id",
    "anyInauguracio",
    "capacitat",
    "ciutat",
    "clubPrincipal",
    "nom",
    "pais",
    "ubicacio"
  ],
  "properties": {
    "_id": {
      "$ref": "#/$defs/ObjectId"
    },
    "anyInauguracio": {
      "type": "integer"
    },
    "capacitat": {
      "type": "integer"
    },
    "ciutat": {
      "type": "string"
    },
    "clubPrincipal": {
      "type": "string"
    },
    "nom": {
      "type": "string"
    },
    "pais": {
      "type": "string"
    },
    "ubicacio": {
      "type": "object",
      "required": [
        "coordinates",
        "type"
      ],
      "properties": {
        "coordinates": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Double"
          }
        },
        "type": {
          "type": "string"
        }
      }
    }
  },
  "$defs": {
    "ObjectId": {
      "type": "object",
      "properties": {
        "$oid": {
          "type": "string",
          "pattern": "^[0-9a-fA-F]{24}$"
        }
      },
      "required": [
        "$oid"
      ],
      "additionalProperties": false
    },
    "Double": {
      "oneOf": [
        {
          "type": "number"
        },
        {
          "type": "object",
          "properties": {
            "$numberDouble": {
              "enum": [
                "Infinity",
                "-Infinity",
                "NaN"
              ]
            }
          }
        }
      ]
    }
  }
}